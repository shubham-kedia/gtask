<div id="signin">
<h2 class="login">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:class => "form") do |f| %>
<div class="row">
  <div class="col-lg-12">
    <div class="form-group login-box"><%= f.label :email,:class => "login-info" %><br />
      <%= f.email_field :email, :autofocus => true ,:class => "form-control",:placeholder=>"Enter email"%>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="form-group login-box"><%= f.label :password,:class => "login-info" %><br />
      <%= f.password_field :password ,:class => "form-control",:placeholder=>"Password"%>
    </div>
  </div>
  <div class="col-lg-12">
    <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
    <% end %>
  </div>
  <div class="col-lg-12">
    <div><%= f.submit "Sign in",:class=>'btn btn-default' %>
    </div>
  </div>
</div>
<% end %>
<%= render "devise/shared/links" %>
</div>